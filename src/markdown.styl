.markdown-body
  lh 1.9
  /.js-commit-preview &
    c 0 0 $base5
  .lead-mktg p
    c $faded
  a
    c $textAlt
    ease color
    td underline
    &:hover
      c $blue
  h1, h2, h3, h4, h5
    c 0 $base1
  img
    c 0 0 $base5
  table
    td, th
      c 0 $base1
    tr td
      c $text $base1 $base3
  p
    o 0.8
  pre > code
    c 0 0 transparent
  code, tt
    b $b
    c $cn $base1 $base7
    fw 500
    m 0.4em
    mono()
    white-space nowrap
  h1, h2, h3, h4, h5, h6
    &:hover
      .octicon-link
        o 1
    .octicon-link
      c $cyan
      o 0
      visibility visible
      transform scale(1.1)
  /.highlight pre, pre
    b $b
    c 0 $base1 $base3
    fw 500
    mono()
  blockquote
    c $textAlt $base1 $base5
  hr
    c 0 0 $base1
  .clippy-wrapper .clippy
    c $cn $base1 $base4
    ease border-color, background-color
    &:hover
      c 0 $blue $base8
    .icon
      inv()
