.markdown-body
  a
    c $textAlt
    ease color
    td underline
    &:hover
      c $blue
  h1, h2, h3, h4, h5
    c 0 $border
  img
    c 0 0 $hl
  table
    td, th
      c 0 $border
    tr
      c $text $border $alt
  code, tt
    b $b
    c $cn
    fw 500
    mono()
  /.highlight pre, pre
    b $b
    c 0 $border $bg
    fw 500
    mono()
  blockquote
    c $textAlt $border $hl
  hr
    c 0 0 $border
  .clippy-wrapper .clippy
    c $cn $border $alt
    ease border-color, background-color
    &:hover
      c 0 $blue $region
    .icon
      inv()
