iframe#graphiql
  &, .graphiql-ide
    c 0 $border
.graphiql-ide
  btc $border
.CodeMirror
  &-cursor
    blc $blue
  &-hint
    c $text $border $alt
    tr background-color 0.1s ease-in-out
    &-information
      c $indigo $border $alt
    &-active
      c $cn 0 $region
      fw 500
  &-linenumber
    c $indigo
    fw 500
  &-gutters
  &-gutter&-foldgutter
    c $text $border $alt
  &.cm-s-graphiql
    c 0 0 $alt
.history-, .doc-explorer-
  &contents
    c $text $border $bg
  &title-bar
    c $text $border $alt
.graphiql-container
  .graphiql-container .history-contents p
    c $text $border
  .execute-options > li.selected,
  .toolbar-menu-items > li.hover,
  .toolbar-menu-items > li:active,
  .toolbar-menu-items > li:hover,
  .toolbar-select-options > li.hover,
  .toolbar-select-options > li:active,
  .toolbar-select-options > li:hover,
  .history-contents > p:hover,
  .history-contents > p:active
    c 0 $border $region

  .search-box
    c 0 $border $bg
    input
      c 0 0 $bg
  .result-window .CodeMirror-gutters
    c 0 $border
  .doc-category-title
    c $faded $border
  .resultWrap
    blc $border
  .arg-name
    c $pink
  .field-name
    c $blue
  .keyword
    c $purple
  .type-name
    c $yellow
  .field-short-description
    c $indigo
  .topBar
    c $text $border $alt
    bg $alt
  .toolbar, .execute
    &-button
      bg $bg
      s none
      svg
        fill $text
  .variable-editor-title
    c $text $border $hl
  .docExplorerShow
    bg $hl
    c $text $border $hl
.result-window .CodeMirror
  c 0 0 $alt
.cm-
  &punctuation
    c $text
  &comment
    c $indigo
  &def
    c $blue
  &property
    c $teal
  &string, &string-2
    c $green
  &keyword
    c $purple
