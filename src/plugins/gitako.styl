.gitako-
  &ready .js-header-wrapper
    c 0 0 $bg
  &toggle-show-button-wrapper
    .action-icon
      .octicon
        ease color, opacity
        o 0.2
        &:hover
          c $blue
          o 1
    &.collapsed
      c 0 $border $hl
      m 1%
      .action-icon
        c $blue
  &side-bar
    &, ../resize-handler
      c 0 $border $border
    & &-body
      brc $border
      c 0 $border $alt
      .octicon
        ease color, opacity
        c $indigo
        o 0.4
        &:hover, &:focus
          c $blue
          o 1
      .gitako-settings-bar
        &-title
          btc $border
        &-content .shadow-shelter
          c 0 $border $alt
        &, .header-row
          c $text $border $alt
      &, ../-content
        .meta-bar
          c $text $border $alt
        .file-explorer
          .search-input-wrapper input[type="text"].form-control
            b 1px
            r 0
          .no-results
            c $faded
          .node-item
            c $text $border
            &-row
              c 0 0 $hl
