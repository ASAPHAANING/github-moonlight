{
  "reporter": "raw",
  "watch": false,
  "extends": ["stlint-v4fire"],
  "rules": {
    "color": false,
    "colons": ["never"],
    "depthControl": {
      "indentPref": 2
    }
  },
  "path": "./src",
  "excludes": ["node_modules/"],
  "prefixVarsWithDollar": {
    "conf": "always",
    "prefix": "$",
    "allowConst": true
  },
  "quotePerf": ["single"],
  "stylusParserOptions": {},
  "reportOptions": {
    "columnSplitter": " | ",
    "maxWidth": 70,
    "trancate": false
  },
  "sortOrder": {
    "conf": "grouped",
    "startGroupChecking": 6,
    "order": [
      [
        "absolute",
        "po",
