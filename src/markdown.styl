.markdown-body
  a
    c $textAlt
    td underline
  h1,
  h2,
  h3,
  h4,
  h5
    c 0 $border
  img
    c 0 0 $hl
  table
    td,
    th
      c 0 $border
    tr
      c $text $border $alt
  code,
  tt
    mono()
    c $cn
    fw 500
  /.highlight pre,
  pre
    c 0 $border $alt
    mono()
    fw 500
  blockquote
    c $textAlt $border $hl
  hr
    c 0 0 $border
  .clippy-wrapper .clippy
    c $cn $border $alt
    .icon
      filter invert(1)
