.issue-
  &keyword, &meta-section .octicon
    c $purple
  &meta-section .octicon
    va middle
.IssueLabel
  &, & > a[style*="#000"]
    c $base2
.issues-reset-query-icon
  c 0 0 $base7
.js-selected-navigation-item.subnav-item, .js-issue-row
  ease background-color
  &.Box-row--focus-gray
    c 0 0 $base4
    &:hover
      c 0 0 $base5
.pinned-issue-item
  c 0 $base1 $base5
.reaction-
  &sort-item
    c 0 $base2
    ease background-color, border-color
    &:hover, &:focus
      c 0 $blue $blueTrans
  &summary-item
    c 0 0 $base4
.email-
  &format
    ~/hidden-toggle a
      c 0 0 $base4
    ~/quoted-reply, ~/signature-reply
      b $b
      bl 4px solid $blue
      c $textAlt $base1 $base3
      font-style italic
      py 6px
      rbr 6px
      rtr 6px
