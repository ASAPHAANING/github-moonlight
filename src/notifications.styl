.notifications-list-item.notification-unread
  c 0 $border $alt
.filter-item
  ease background-color
  &:hover
    c 0 0 $hover
  &.selected, &[aria-current], &[aria-selected=true]
    c $cn 0 $icon
.notification-
  &navigation.bg-white
    c 0 0 $bg
  &configure-filters
    octicon $hover
  &navigation &configure-filters
    octicon $text
    &:hover
      octicon $blue
.notifications-list-item
  & &-actions svg
    v $text
  &:hover
    c 0 0 $hl
    .notification-list-item-actions .btn
      ease background-color
      &:hover
        c $cn $border $border
.notifications-dropdown
  c 0 $border $border
  .notifications-list
    mb 0
  &-arrow
    c 0 $alt
  &, &-see-all
    bt $b
    c 0 $border $region
.thread-subscription-status
  c $text $border $bg
.Toast
  b $b
  s-2()
  &--error &-icon
    c 0 0 $red
  &--warning &-icon
    c $bg 0 $yellow
  &--success &-icon
    c $bg 0 $teal
  &, &-content
    c $text $border $alt
  &-dismissButton
    c $red $border $bg
    min-height 100%
    max-height none
