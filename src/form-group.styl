input
  caret-color $blue
  &[type="text"]
    c $cn $base1 $base3
    ease background-color, border-color
    &:focus
      c 0 $blue $base5
.input-contrast
  box()
.drag-and-drop
  c $blue $base1 $base3
.file
  &:target
    s-1()
  &, &-wrap
    c 0 $base1
  &-header
    c $blue $base1 $base4
    m 0
.form-
  &group &control
    c $cn $base1 $base4
    .search-input
      caret-color $blue
    &:focus
      c 0 $blue $base7
      .form-control, .ais-SearchBox-input, .form-select
        &.focus, &:focus
          c 0 $blue
          s none
  &control
    &, ../select
      ../.search-page-label.js-advanced-search-label
        &, & input
          c 0 0 $base5
      c $cn $base1 $base4
      s none
      &.focus, &:focus
        c $cn $blue 0
        s none
.write-content.js-write-bucket
  s none
