$bgColors = {
  gray: $base4
  gray-light: $base4
  blue-light: $base4
  yellow-light: $yellowTrans
  purple-light: $purpleTrans
  blue: $base7
  blue-2: $blueTrans
  gray-dark: $base2
  gray-2: $base7
  white: $base5
  pending: $purple
}
$borderColors = {
  blue-light: $blue
}
$textColors = {
  gray-light: $textAlt
  blue: $blue
  gray: $text
  gray-dark: $text
  emphasized: $blue
  green: $green
  purple: $purple
  red: $red
}
.text-
  for $k, $v in $textColors
    &{$k}
      c $v
.border-
  for $k, $v in $borderColors
    &{$k}
      c 0 $v
.bg-
  for $k, $v in $bgColors
    &{$k}
      c 0 0 $v
