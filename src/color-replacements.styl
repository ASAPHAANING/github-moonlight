$bgColors = {
  gray: $alt
  gray-light: $alt
  blue-light: $alt
  yellow-light: $yellowTrans
  purple-light: $purpleTrans
  blue: $icon
  gray-dark: $bg
  gray-2: $icon
  white: $hl
  pending: $purple
}
$textColors = {
  gray-light: $textAlt
  blue: $blue
  gray: $text
  gray-dark: $text
  emphasized: $blue
  green: $green
  purple: $purple
  red: $red
}
.bg-
  for $k, $v in $bgColors
    &{$k}
      c 0 0 $v
.text-
  for $k, $v in $textColors
    &{$k}
      c $v
