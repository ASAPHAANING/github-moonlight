.branch-
  &name
    c $text $base1 $base8
  &action-
    &state-clean
      ../body::before ^[2..-1]
        brc $base5
    &item
      & + &, & + .mergeability-details
        c 0 $base1
      &-icon.completeness-indicator
        .octicon
          v $base1
        &-success
          c $base1 0 $green
        &-error
          c $base1 0 $red
        &-problem
          c $base1 0 $yellow
    &state-clean &icon
      c 0 0 $teal
      .octicon
        v $base1
    &body
      b 0
      c 0 $base1 $base4
      caret "right"
      .merge-
        &branch-form, &message
          c 0 $base1 $base4
