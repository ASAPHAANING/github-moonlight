.filter-list.small
  c 0 0 $base3
.filter-item
  ease color, background-color, border-color
  /.filter-list:not(.small) &
    b $b
    c $text $base1 $base4
    ease color, background-color, border-color
    &:hover, &:focus
      c 0 $blue $base6
    &.selected, &[aria-current], &[aria-selected=true]
      c $cn 0 $base5
  /.filter-list.small &
    b $b
    c 0 $base1 $base4
    ease color, background-color, border-color
    &.selected, &[aria-current], &[aria-selected=true]
      c 0 0 $base7
    &:hover, &:focus
      c 0 0 $base7
.notification-
  &navigation.bg-white
    c 0 0 $base2
  &configure-filters
    octicon $base9
  &navigation &configure-filters
    octicon $text
    &:hover, &:focus
      octicon $blue
.notifications-
  &list-item
    &.notification-unread
      c 0 $base1 $base4
    & &-actions svg
      v $text
    &:hover, &:focus
      c 0 0 $base5
      .notification-list-item-actions .btn
        ease background-color
        &:hover
          c $cn $base1 $base1
  &dropdown
    c 0 $base1 $base1
    .notifications-list
      mb 0
    &-arrow
      c 0 $base4
    &, &-see-all
      bt $b
      c 0 $base1 $base8
.thread-subscription-status
  c $text $base1 transparent
.Toast
  b $b
  s-2()
  &--error &-icon
    c 0 0 $red
  &--warning &-icon
    c $base2 0 $yellow
  &--success &-icon
    c $base2 0 $teal
  &, &-content
    c $text $base1 $base4
  &-dismissButton
    c $red $base1 $base2
    max-height none
    min-height 100%
