.dropdown-signed-commit .dropdown-menu:after
  display none
.signed-commit
  &-header
    c 0 0 $bg
  &-header, &-badge.verified
    c $green $green
    fs 16px
.commit
  &-author-section
    c $blue
  &s-listing:before
    c 0 0 $hl
  &-group-title .octicon-git-commit
    c $text
  &-ref
    c $text $border $bg
    ff monospace
    fw 500
  &-sha
    c $yellow $border $hl
  & &-title, &-group-title
    &, a
      c $text
  &-tease
    c $blue $border $alt
    &-sha
      c $blue
    &-contributors
      bt $b
      c 0 0 $hover
.commits
  blockquote
    c $text
  &-list-item.navigation-focus
    c 0 0 $hover
.full-commit
  c $blue $border $alt
  p.commit-title
    c $blue
  .sha-block
    & > .sha
      c $blue
    c $faded
    fs 14px
    fw 500
  .commit-meta
    c 0 $border $hl
.file-commit-form--full
  c $text $border $bg
