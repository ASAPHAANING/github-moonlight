.legend
  li[style='background-color: #ebedf0'] { c: 0 0 white; o: 0.05; }
  li[style='background-color: #c6e48b'] { c: 0 0 $blue; o: 0.25; }
  li[style='background-color: #7bc96f'] { c: 0 0 $blue; o: 0.5 }
  li[style='background-color: #239a3b'] { c: 0 0 $blue; o: 0.75; }
  li[style='background-color: #196127'] { c: 0 0 $blue; }

.graph-before-activity-overview { c: 0 0 $hl; }
.calendar-graph
  text
    &.wday, &.month { fill: $cn; }
  rect
    &[fill="#ebedf0"] { fill: white; o: 0.05; }
    &[fill="#c6e48b"] { fill: $blue; o: 0.25; }
    &[fill="#7bc96f"] { fill: $blue; o: 0.5 }
    &[fill="#239a3b"] { fill: $blue; o: 0.75; }
    &[fill="#196127"] { fill: $blue; }
