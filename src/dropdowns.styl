.dropdown-
  &divider
    c 0 $base1
  &signed-commit &menu-w
    caret "left" $base2
  &menu
    c $text $base1 $base4
    .octicon
      c $indigo
      o 0.6
      mb 3px
      mr 2px
    &-ne
      caret "top" $base5
    &:after
      bbc $base1
  &header
    c $faded
  &item
    c $text
    ease background-color, color
    &:hover, &:focus
      c $cn 0 $base8
