iframe#graphiql
  &, .graphiql-ide
    c 0 $border
.graphiql-ide
  btc $border
.CodeMirror
  &-cursor
    blc $blue
  &-hint
    c $text $border $alt
    ease background-color
    &-information
      c $indigo $border $alt
    &-active
      c $cn 0 $region
      fw 500
  &-linenumber
    c $indigo
    fw 500
  &-gutters, &-gutter&-foldgutter
    c $text $border $alt
  &.cm-s-graphiql
    c 0 0 $alt
.history-, .doc-explorer-
  &contents
    c $text $border $bg
  &title-bar
    c $text $border $alt
.graphiql-container
  .graphiql-container .history-contents p
    c $text $border
  .execute-options > li,  .toolbar-menu-items > li, .toolbar-select-options > li, .history-contents > p
    &:hover, &.hover, &:active
      c 0 $border $region
  .search-box
    c 0 $border $bg
    input
      c 0 0 $bg
  .result-window .CodeMirror-gutters
    c 0 $border
  .doc-category-title
    c $faded $border
  .resultWrap
    blc $border
  .arg-name
    c $pink
  .field-name
    c $blue
  .keyword
    c $purple
  .type-name
    c $yellow
  .field-short-description
    c $indigo
  .topBar
    bg $alt
    c $text $border $alt
  .toolbar, .execute
    &-button
      bg $bg
      s none
      svg
        v $text
  .variable-editor-title
    c $text $border $hl
  .docExplorerShow
    bg $hl
    c $text $border $hl
.result-window .CodeMirror
  c 0 0 $alt
.cm-
  &punctuation
    c $text
  &comment
    c $indigo
  &def
    c $blue
  &property
    c $teal
  &string, &string-2
    c $green
  &keyword
    c $purple
