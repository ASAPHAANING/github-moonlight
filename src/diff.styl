.diffstat
  c $textGray
  &-block-
    &neutral
      c 0 0 $sb
    &added
      c 0 0 $green
    &deleted
      c 0 0 $red
  &-summary
    c $text
    strong
      c $purple
.diffbar
  c 0 0 $base2
.file-diff-split .empty-cell
  c 0 $base1 $base4
.blob-
  &code-
    &addition
      c 0 0 $tealTrans
    &deletion
      c 0 0 $redTrans
    &inner
      c $text
      fs 15px
      lh 1.8
      mono()
      &.highlighted, & .highlighted
        c 0 0 $base8
    &addition
      .blob-code-marker::before
        c $teal
      .x
        c 0 0 $teal
    &deletion
      .blob-code-marker::before
        c $red
      .x
        c 0 0 $red
    &addition, &deletion
      .x
        c $base1
  &num
    c $base9 $base1 $base4
    fw 600
  &expanded
    &code, &num
      c 0 $base1 $base4
